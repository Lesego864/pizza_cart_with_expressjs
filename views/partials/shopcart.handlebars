<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Perfect Pizza</h1>

        </div>
    </div>
    <div class="row menu ">
        <div class="col-12">
            <div class="cart ">
                <h2>Shopping Cart</h2>
                <form action="/cart" method="POST">
                    <table class="cartTable">
                        <tr>
                            <th></th>
                            <th>Add</th>
                            <th>Minus</th>
                            <th>Qty</th>
                            <th>Price</th>
                        </tr>
                        <tr>
                            <td class="item">Small Pizza</td>
                            <td><button class="aBtn small" name="size" value="smallAddButton" on
                                    type="submit">+</button>
                            </td>
                            <td><button class="mBtn small" name="size" value="smallMinButton" on
                                    type="submit">-</button>
                            </td>
                            <td class="smallPizzaQty item">{{#if qty}}{{qty.Q1}}{{else}} {{/if}}</td>
                            <td class="item"><span class="smallPizzaTotal">{{#if
                                    price}}{{price.smallPizzaTotal}}{{else}}{{/if}}</span></td>
                        </tr>

                        <tr>
                            <td class="item">Medium Pizza</td>
                            <td><button class="aBtn med" name="size" value="mediumAddButton" on type="submit">+</button>
                            </td>
                            <td><button class="mBtn med" name="size" value="mediumMinButton" on type="submit">-</button>
                            </td>
                            <td class="medPizzaQty item">{{#if qty}}{{qty.Q2}}{{else}} {{/if}}</td>
                            <td class="item"><span class="medPizzaTotal">{{#if
                                    price}}{{price.mediumPizzaTotal}}{{else}}{{/if}}</span></td>
                        </tr>

                        <tr>
                            <td class="item">Large Pizza</td>
                            <td><button class="aBtn large" name="size" value="largeAddButton" on
                                    type="submit">+</button>
                            </td>
                            <td><button class="mBtn large" name="size" value="largeMinButton" on
                                    type="submit">-</button>
                            </td>
                            <td class="largePizzaQty item">{{#if qty}}{{qty.Q3}}{{else}} {{/if}}</td>
                            <td class="item"><span class="largePizzaTotal">{{#if
                                    price}}{{price.largePizzaTotal}}{{else}}{{/if}}</span></td>
                        </tr>

                        <tr>
                            <td colspan="4" class="item">TOTAL COST</td>
                            <td class="item"><span class="cartTotal">{{#if
                                    price}}{{price.totalCost}}{{else}}{{/if}}</span></td>
                        </tr>
                </form>
                <tr>
                    <td colspan="5">
                        <form action="/checkout" method="POST">
                            <button class="checkOut {{#if checkOut}}{{checkOut}}{{else}}hidden{{/if}}" name="checkOut"
                                on type="submit">CHECK OUT</button>
                        </form>
                    </td>
                </tr>
                </table>

                <div class="payOut {{#if payOut}}{{payOut}}{{else}}hidden{{/if}}">
                    <form action="/pay" method="POST">
                        <table class="cartTable">
                            <tr>
                                <td class="pAmt">Payment Amount (R):<input class="payAmt" type="text" name="payAmt"
                                        value="{{payAmt}}">
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2"><button class="payBtn hide" name="payBtn" on type="submit">PAY</button>
                                </td>
                            </tr>
                        </table>
                    </form>
                    <div class="payOut {{#if messageHide}}{{messageHide}}{{else}}hidden{{/if}}">
                        <form action="/pay" method="POST">
                            <span class="message">{{messageContent}}</span>
                            <br>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>